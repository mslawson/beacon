<h1>Beacon Contracting</h1>
<h3>Job Costing Analysis Sheet</h3>

<table>
  <tr>
    <th>Billing Invoice Date</th>
    <th>File Number</th>
    <th>Job Name</th>
    <th>GC or Owner</th>
  </tr>
 
  <% @invoices.each do |invoice| %>
    <tr>
      <td><%= invoice.invoice_date.strftime("%m/%d/%Y") %></td>
      <td><%= invoice.file_num %></td>
      <td><%= invoice.job_name %></td>
      <td><%= invoice.job_loc %></td>
      <td><%= link_to 'Show Job', invoice_path(invoice) %> | </td>
      <td><%= link_to 'Remove Job', invoice_path(invoice), method: :delete %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to "Add a new job", new_invoice_path %>
